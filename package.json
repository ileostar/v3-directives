{
  "name": "@ileostar/v3-directives",
  "type": "module",
  "version": "1.0.0-beta.0",
  "packageManager": "pnpm@8.15.3",
  "description": "Custom Vue3 directives",
  "author": "ileostar <hi@leostar.top> (https://github.com/ileostar)",
  "license": "MIT",
  "homepage": "https://github.com/antfu/eslint-config",
  "bugs": {
    "url": "https://github.com/ileostar/v3-directives/issues"
  },
  "keywords": [
    "v3",
    "directives",
    "vue3"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch & eslint-flat-config-viewer",
    "start": "esno src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src/directive/**/*.ts",
    "fix": "eslint src/**/*.*  --fix",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bumpp --commit --push --tag && npm publish"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.3",
    "vue": "^3.4.19",
    "vue-resize": "^1.0.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/node": "^20.11.19",
    "@vitest/ui": "^1.3.1",
    "bumpp": "^9.3.0",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-plugin-format": "^0.1.0",
    "eslint-ts-patch": "8.56.0-0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitepress": "1.0.0-rc.41"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
